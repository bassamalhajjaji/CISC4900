{
  "name": "RetailFlow (Plain Node)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "overrideCommand": false,
  "postCreateCommand": "cd server && npm install",
  "forwardPorts": [3000, 3306],
  "portsAttributes": {
    "3000": { "label": "API", "onAutoForward": "openBrowser" },
    "3306": { "label": "MySQL" }
  }
}